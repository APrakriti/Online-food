<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    tools:context="com.prakriti.onlinefood.FoodItemList">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/image_description"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/price_desc"
        android:padding="20dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Used Material"
        android:textSize="20dp"
        android:id="@+id/material_desc"
        android:padding="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Via sms"
        android:id="@+id/btn_order_sms"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="order via phone"
        android:id="@+id/btn_order_phn"/>


    </LinearLayout>

